<?php
/**
 * @file qtrCore.install
 * Install and update functions for the module qtrCore.
 */

/**
 * Implements hook_enable().
 */
function qtrCore_enable() {
  mailsystem_set(array('qtrCore' => 'MimeMailSystem'));
}

/**
 * Implements hook_disable().
 */
function qtrCore_disable() {
  mailsystem_clear(array('qtrCore' => 'MimeMailSystem'));
}

/**
 * Implements hook_install().
 */
function qtrCore_install() {
  $data = drupal_get_path('module', 'qtrCore') . '/data';

  // Import the chapters and verses of the Quran.
  qtr::import_chapters("$data/quran/index.xml");
  qtr::import_verses("$data/quran/uthmani.xml");

  // Import a few English translations.
  qtr::import_translations("$data/translations/en/pickthall.txt");
  qtr::import_translations("$data/translations/en/shakir.txt");
  qtr::import_translations("$data/translations/en/yusufali.txt");
}

/**
 * Implements hook_uninstall().
 */
function qtrCore_uninstall() {
  // delete variables that were used for this module
  $variables = array(
    'qtr_languages',
    'qtr_client',
    'qtr_voting_mode',
    'qtr_preferred_projects',
    'qtr_export_path',
    'qtr_export_notify_admin',

    'qtrCore_crontime',
  );
  foreach ($variables as $var) {
    variable_del($var);
  }
}

